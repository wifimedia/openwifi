#!/bin/sh

[ "$ACTION" = ifup ] || exit 0

#LED:
cab_detect=`cat /sys/class/net/$(uci get network.wan.ifname)/carrier`
if [ $cab_detect -eq 0 ];then
	ping -c 3 8.8.8.8 > /dev/null
	if [ $? -eq "0" ]; then
		echo 1 >/sys/devices/platform/leds/leds/tl-wr840n-v6:green:wan/brightness
		echo 1 >/sys/devices/platform/leds/leds/tl-wr840n-v6:orange:wan/brightness
	else
		/etc/init.d/led reload
	fi
else	
	/etc/init.d/led reload
fi

